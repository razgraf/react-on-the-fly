{
	"name": "react-on-the-fly",
	"displayName": "React On The Fly",
	"description": "Turn boilerplate into a new component and auto-import it on the fly in React.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.56.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:react-on-the-fly.rotft",
		"onCommand:react-on-the-fly.rotfd"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "react-on-the-fly.rotft",
				"title": "React On The Fly: Create component using your template"
			},
			{
				"command": "react-on-the-fly.rotfd",
				"title": "React On The Fly: Create default component"
			}
		],
		"configuration": {
			"title": "React On The Fly",
			"properties": {
				"react-on-the-fly.userTemplateLocationInWorkspace": {
					"type": "string",
					"default": ".rotf/component.handlebars",
					"description": "Specify the file path of the customized component template. Make sure it is a .handlebars or .hbs file that consumes a 'title' variable."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.56.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"handlebars": "^4.7.7"
	}
}